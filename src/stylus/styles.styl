@import "html5-reset"
@import "font-awesome"
@import "util"


/*——————————————————————————————————————————————————————————————————————————————
C O M M O N 
——————————————————————————————————————————————————————————————————————————————*/


// Colours
yellow = #F8F400
green = #53C514
green_dark = #5A923A
purple = #5F3EF9
blue = #1424C5

comp1 = #3F00B2
comp2 = #5A00FF

white = #F5F5F5
grey = #698794
grey_fade = #92B4C2
black = #373637

bg_light = #E9E9E9
bg_dark = #414141



// Typography
font_serif = "ff-tisa-web-pro", 'Athelas', serif // 400 700
font_sans = "futura-pt", "Futura", sans-serif // 300 400 500 700 800


// Grid
$column = 100%/18
$gutter = 0.75em


/*——————————————————————————————————————————————————————————————————————————————
G L O B A L S
——————————————————————————————————————————————————————————————————————————————*/

*
    vendor(box-sizing, border-box)


.container
    max-width 60em
    margin 0 auto

body
    font-family font_serif
    color black
    background-color bg_light

.not-loaded
    .swipe-wrap > div
        display none
        &:first-of-type
            display block

img
    width 100%

h1
h2
h3
h4
    font-family font_sans
    margin 0.5em 0

h1
    font-size 2em
    text-align center
h2
    font-size 1.5em
h3
    font-size 1.25em

p
    margin-bottom 1em
    line-height 1.25em

hr
    border-bottom 3px solid lighten(yellow, 40%)
    border-top 0
    // box-shadow 0 0 1em rgba(grey, 0.25)

hr#readmore
    margin-top 0

section
    clear both
    &.no-padding
        padding 0


.section__title
    text-transform uppercase

.section__callout
    background-color lighten(yellow, 90%)
    padding 0.5em
    border-left 6px solid lighten(yellow, 30%)
    font-family font_sans
    font-size 1.15em
    text-align left

    p
        margin 0




button
.button
    display inline-block
    background-color bg_dark
    color white
    font-family font_sans
    font-weight 500
    text-transform uppercase
    border 0
    padding 0.5em 0.75em
    border-radius 5px
    font-size 0.9em
    cursor pointer
    text-decoration none
    i
        color yellow


/*——————————————————————————————————————————————————————————————————————————————
S L I D E R S
——————————————————————————————————————————————————————————————————————————————*/

.swipe
    overflow hidden
    visibility hidden
    position relative

.swipe-wrap
    overflow hidden
    position relative

.swipe-wrap > div
    float left
    width 100%
    position relative
    background-color #f5f5f5
    box-shadow inset 0 0 30em #666


.swipe-controls
    .control--left
    .control--right
        display inline-block
        background-color bg_dark
        border 2px solid bg_light
        color bg_light
        position absolute
        bottom 10%
        z-index 1000
        padding 0.5em 0.75em
        opacity 0.5
        cursor pointer
        transition()
        i
            font-size 1.5em
        &:hover
        &:active
            opacity 1
    .control--left
        left -6px
        border-radius 0 8px 8px 0
    .control--right
        right -6px
        border-radius 8px 0 0 8px



/*——————————————————————————————————————————————————————————————————————————————
S P E C F I C
——————————————————————————————————————————————————————————————————————————————*/


.header
    margin 1em $column
    text-align center
    h1
        font-size 1.5em
        font-family ''
        font-weight 700
        text-transform uppercase
        color black
        margin 0
        padding 0
        text-align center

        .logo
            display block
            margin 0.5em auto
            width 3em
            vertical-align middle

    nav
        clear both
        ul
            display inline-block
            background-color bg_dark
            border-radius 5px
            font-family font_sans
            font-weight 700
            text-transform uppercase
            text-align center
            font-size 1.25em
            margin 0.25em 0 0
        li
            display inline-block
            padding 0.25em 0.25em
        a
            display inline-block
            color bg_light
            text-decoration none
            border-bottom 2px solid yellow
            margin 0.15em
    .floating-nav
        display none
        visibility hidden
        position fixed
        top 0
        left 0
        width 100%
        z-index 20000
        text-align center
    @media(min-height:25em) and (max-width: 47em)
        .nav-fixed
            display block
            visibility visible
        .nav-hide
            visibility hidden

    @media(min-width: 32em)
        margin 1em $column
        h1
            line-height 25%
            margin-bottom 0.5em
            .logo
                position relative
                top 0.5em
                display inline-block
                margin 0
                margin-right 0.5em
                width 2.5em
    @media(min-width: 39em)
        h1
            margin-bottom 0
            .logo
                position static
                vertical-align middle
    @media(min-width: 47em)
        h1
            width 55%
            display inline-block
            float left
            line-height 100%
            text-align left
            margin-bottom 0.25em
            .logo
                vertical-align baseline
                width 3em
                float left
        nav
            display inline-block
            width 45%
            ul
                margin 0.5em

.section--read
    padding 1em $column
    padding-top 1em

.section--profiles
    width 100%
    padding 0 $column
    padding-top 1em
.profile
    text-align center
    padding 1em 0
    h2
        font-size 1.75em
        font-weight 300
    p
        margin-bottom 1em
    @media(min-width:39em)
        width 50%
        display inline-block
        vertical-align top
        padding 0

.profile__image
    position relative
    z-index 2
    border-radius 100%
    width 100%
    max-width 9.75em
    display inline-block
    overflow hidden

    img
        position relative
        z-index -100
        height 100%
        max-height 9.75em
        border-radius 100%

.profile__quote
    text-align left
    font-weight 300
    margin 1em ($column/2)
    padding 0.5em ($column/2)
    border-radius 5px
    background-color rgba(white, 0.75)
    color lighten(black, 10%)
    clear both
    p
        line-height 1.25em


.toggleable
    text-align center
    .toggle
        opacity 0.5
        i
            display inline-block
            margin-right 0.35em  
            transition()
    .toggleable__inner
        text-align left
        position relative
        opacity 0
        height 0
        border-radius 0 0 6px 6px
        p
            line-height 1.4em
    &.active
        .toggle
            display none
        .toggleable__inner
            opacity 1
            height auto


.social
    text-align center
    padding 0em 0 1em
    margin-bottom 0.5em
    a
        color black
        text-decoration none
        font-size 2em
        padding 0 0.5em
        i.icon-facebook-sign
            color #3C5399
        i.icon-twitter-sign
            color #01AAF1
        i.icon-youtube-sign
            color #D30312

.srp
    position relative
    clear both
    padding 1em $column
    text-align left
    border-bottom 2px solid yellow
    background-color white
    box-shadow 0 0 1em rgba(grey, 0.25)

    h2
    h3
        font-size 1.5em
        line-height 1.5em
        font-weight 200
        font-family font_serif

        em
            color red
    h2
        font-family font_sans
        font-weight 600
        font-size 2.5em
        line-height 1.2em
        margin 0.5em 0

.section--qual
    text-align center
    margin 0 $column
    padding-bottom 1em
    img
        width 5em
        margin 0.25em
        display inline-block

.qual__prose
    border-radius 5px
    background-color rgba(white, 0.75)
    color lighten(black, 10%)
    margin 1em ($column/2)
    padding 0.5em ($column/2)
    text-align left
    h2
        text-align center
    ul
        margin-left 1.5em
        margin-bottom 1em
    li
        line-height 1.5em


.section--prices
    text-align center
    margin 0 $column
    padding-top 1em
.price--small
.price--large
    width 30%
    max-width 8em
    display inline-block
    margin 0
    vertical-align middle
    background-color white
    padding 0.25em
    background-color lighten(bg_light, 80%)
    color bg_dark
    border-radius 4px
    .session
        font-size 90%
    .price
        color lighten(bg_dark, 20%)
        font-size 60%
        .price__amount
            color bg_dark
            font-size 3em
            font-family font_sans
            display block
            margin 0.5em 0 0
        .price__total
            display block
            font-size 70%
            margin-top 2em
            color lighten(bg_dark, 30%)
.price--small
    border 0.1em solid darken(bg_light, 10%)
.price--large
    width 40%
    position relative
    z-index 5
    font-size 1.25em
    border 4px solid lighten(yellow, 50%)
    .price__amount
        font-weight 700
    .price span
        // 
.price__discount
    clear both
    padding 1em
    font-size 80%
    color lighten(bg_dark, 50%)

@media(min-width: 32em)
    .price__container
        font-size 120%

@media(min-width: 42em)
    .price--large
        margin 0 0.25em
    .price__container
        font-size 140%




.section--contact
    margin 0 $column
    padding-top 1em
    text-align center
    ul
        list-style none
        // text-align center
        font-size 1.1em
        margin-bottom 1em
    li
        display inline-block
        margin 0.5em 1em


footer
    border-top 3px solid yellow
    font-family font_sans
    text-align center
    background bg_dark
    color lighten(bg_dark, 20%)
    padding 2em $column
    a
        display inline-block
        opacity 0.2
        color white
        text-decoration none
        transition()
        &:hover
        &:active
            opacity 1
    img
        width 2em
        margin-top 1.5em